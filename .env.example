# Otedama Mining Pool Configuration

# Pool Settings
POOL_NAME=Otedama Mining Pool
POOL_ADDRESS=your_bitcoin_wallet_address_here

# Blockchain Connection
BITCOIN_RPC_URL=http://localhost:8332
BITCOIN_RPC_USER=bitcoinrpc
BITCOIN_RPC_PASSWORD=your_rpc_password_here

# Network Configuration
STRATUM_PORT=3333
STRATUM_V2_PORT=3336
API_PORT=8080
P2P_PORT=33333
HEALTH_CHECK_PORT=9090

# Pool Configuration
POOL_FEE=0.01
PAYMENT_SCHEME=PPLNS
MIN_PAYMENT=0.001
PPLNS_WINDOW=100000

# Security
JWT_SECRET=change_this_to_random_secret
API_KEY=change_this_to_random_api_key

# Zero-Knowledge Proof (Optional)
ENABLE_ZKP=false
REQUIRE_ZKP=false

# Performance
WORKERS=0
MAX_CONNECTIONS=10000
SHARE_TARGET_TIME=10000

# Database
DATABASE_PATH=./data/pool.db

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/pool.log

# Features
ENABLE_PROFIT_SWITCHING=false
ENABLE_ASIC_MINING=true
ENABLE_P2P_FEDERATION=true
ENABLE_STRATUM_V2=true

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000