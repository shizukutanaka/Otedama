# Otedama Mining Pool Configuration

# Pool Settings
POOL_NAME=Otedama Mining Pool
POOL_ADDRESS=your_bitcoin_wallet_address_here

# Blockchain Connection
BITCOIN_RPC_URL=http://localhost:8332
BITCOIN_RPC_USER=bitcoinrpc
BITCOIN_RPC_PASSWORD=your_rpc_password_here

# External Service API Keys (for low-fee conversions)
# BTCPay Server (0% fees via Lightning Network)
BTCPAY_URL=https://your-btcpay-server.com
BTCPAY_API_KEY=your_btcpay_api_key
LIGHTNING_NODE_URL=your_lightning_node_url

# SimpleSwap (0% trading fees, ~0.5% spread)
SIMPLESWAP_API_KEY=your_simpleswap_api_key

# ChangeNOW (0.5% fixed fee)
CHANGENOW_API_KEY=your_changenow_api_key

# CoinPayments (0.5% fee - backup service)
COINPAYMENTS_API_KEY=your_coinpayments_public_key
COINPAYMENTS_API_SECRET=your_coinpayments_private_key

# Network Configuration
STRATUM_PORT=3333
STRATUM_V2_PORT=3336
API_PORT=8080
P2P_PORT=33333
HEALTH_CHECK_PORT=9090

# Pool Configuration
POOL_FEE=0.01
PAYMENT_SCHEME=PPLNS
MIN_PAYMENT=0.001
PPLNS_WINDOW=100000

# Security
JWT_SECRET=change_this_to_random_secret
API_KEY=change_this_to_random_api_key

# Zero-Knowledge Proof (Optional)
ENABLE_ZKP=false
REQUIRE_ZKP=false

# Performance
WORKERS=0
MAX_CONNECTIONS=10000
SHARE_TARGET_TIME=10000

# Database
DATABASE_PATH=./data/pool.db

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/pool.log

# Features
ENABLE_PROFIT_SWITCHING=false
ENABLE_ASIC_MINING=true
ENABLE_P2P_FEDERATION=true
ENABLE_STRATUM_V2=true
ENABLE_SOLO_MINING=true
ENABLE_MULTI_COIN_PAYOUTS=true
ENABLE_EXTERNAL_SERVICES=true
ENABLE_LIGHTNING_NETWORK=true

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000