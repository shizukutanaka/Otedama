# Otedama Production Environment Variables
# Copy this file to .env.production and update with your values

# Database Configuration
DB_PASSWORD=your_secure_database_password_here
DB_HOST=postgres
DB_PORT=5432
DB_NAME=otedama
DB_USER=otedama
DB_SSL_MODE=require

# Redis Configuration
REDIS_PASSWORD=your_secure_redis_password_here
REDIS_HOST=redis
REDIS_PORT=6379

# Security Keys
JWT_SECRET=your_jwt_secret_key_here_minimum_32_chars
API_KEY_SALT=your_api_key_salt_here
ENCRYPTION_KEY=your_32_byte_encryption_key_here

# Pool Configuration
POOL_NAME=Otedama Mining Pool
POOL_FEE=1.0
MIN_PAYOUT_BTC=0.001
MIN_PAYOUT_ETH=0.01
MIN_PAYOUT_LTC=0.1
MIN_PAYOUT_XMR=0.1

# Email Configuration (for alerts)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_specific_password
ALERT_EMAIL=admin@yourdomain.com

# Monitoring
GRAFANA_PASSWORD=your_grafana_admin_password
PROMETHEUS_RETENTION_DAYS=30

# Backup Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
BACKUP_S3_BUCKET=your-backup-bucket
BACKUP_RETENTION_DAYS=30
BACKUP_ENCRYPTION_KEY=your_backup_encryption_key

# Federation Settings
FEDERATION_NODE_ID=your_unique_node_id
FEDERATION_SECRET=your_federation_secret_key

# Rate Limiting
RATE_LIMIT_PER_IP=100
RATE_LIMIT_GLOBAL=10000
DDOS_BAN_DURATION=3600

# Geographic Settings
GEO_ENABLED=true
ALLOWED_COUNTRIES=US,CA,EU,JP,KR,AU
BLOCKED_COUNTRIES=

# SSL/TLS (for production)
SSL_CERT_PATH=/etc/letsencrypt/live/yourdomain.com/fullchain.pem
SSL_KEY_PATH=/etc/letsencrypt/live/yourdomain.com/privkey.pem

# External APIs
COINGECKO_API_KEY=your_coingecko_api_key
ETHERSCAN_API_KEY=your_etherscan_api_key
BLOCKCHAIN_INFO_API_KEY=your_blockchain_info_api_key

# Performance Tuning
MAX_WORKERS=1000
MAX_CONNECTIONS_PER_IP=10
CONNECTION_TIMEOUT=300
WORKER_TIMEOUT=600

# Feature Flags
ENABLE_PROFIT_SWITCHING=true
ENABLE_AUTO_DIFFICULTY=true
ENABLE_FEDERATION=true
ENABLE_SMART_CONTRACTS=true
ENABLE_MOBILE_API=true
ENABLE_MERGER_SUPPORT=true

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
LOG_OUTPUT=file
LOG_FILE_PATH=/app/logs/otedama.log
LOG_MAX_SIZE=100
LOG_MAX_BACKUPS=10
LOG_MAX_AGE=30

# Development/Staging (set to false in production)
DEBUG_MODE=false
ENABLE_PROFILING=false