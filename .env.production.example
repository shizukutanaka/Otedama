# Otedama Production Environment Configuration
# Copy this file to .env.production and update values

# Basic Configuration
NODE_ENV=production
HOST=0.0.0.0
PORT=8080
API_PORT=8081
WS_PORT=3334

# Pool Configuration
POOL_NAME=Otedama Mining Pool
POOL_OPERATOR=Your Name
POOL_FEE=0.01
PAYOUT_INTERVAL=3600000
MIN_PAYOUT_BTC=0.001
MIN_PAYOUT_ETH=0.01
MIN_PAYOUT_LTC=0.1
POOL_WALLET_ADDRESS=your-pool-wallet-address

# Mining Algorithms
ENABLE_SHA256=true
SHA256_PORT=3333
SHA256_DIFFICULTY=8192

ENABLE_SCRYPT=true
SCRYPT_PORT=3334
SCRYPT_DIFFICULTY=2048

ENABLE_ETHASH=true
ETHASH_PORT=3335
ETHASH_DIFFICULTY=4000000000

ENABLE_RANDOMX=true
RANDOMX_PORT=3336
RANDOMX_DIFFICULTY=100000

# Worker Configuration
VALIDATION_WORKERS=4
MINING_WORKERS=8
MAX_MINER_CONNECTIONS=10000
CONNECTION_TIMEOUT=600000

# DEX Configuration
ENABLE_DEX=true
MAKER_FEE=0.001
TAKER_FEE=0.0015
MIN_ORDER_SIZE=0.00001
MAX_ORDER_SIZE=1000
MATCHING_ALGORITHM=PRICE_TIME
MATCHING_BATCH_SIZE=100
MATCHING_INTERVAL=10
ENABLE_AMM=true
ENABLE_ORDER_BOOK=true

# DeFi Configuration
ENABLE_DEFI=true
ENABLE_STAKING=true
MIN_STAKE=100
STAKING_APR=0.05
ENABLE_LENDING=true
COLLATERAL_RATIO=1.5
ENABLE_GOVERNANCE=true
PROPOSAL_THRESHOLD=10000
VOTING_PERIOD=259200000

# SSL Configuration
ENABLE_SSL=false
SSL_CERT_PATH=/path/to/cert.pem
SSL_KEY_PATH=/path/to/key.pem

# Database Configuration
DB_CLIENT=postgresql
DB_HOST=localhost
DB_PORT=5432
DB_USER=otedama
DB_PASSWORD=your-secure-password
DB_NAME=otedama
DB_POOL_MIN=5
DB_POOL_MAX=20

# Redis Cache
ENABLE_REDIS=true
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password
REDIS_DB=0

# Memory Cache
CACHE_MAX_SIZE=104857600
CACHE_TTL=3600000

# Connection Pool
POOL_MIN_CONNECTIONS=5
POOL_MAX_CONNECTIONS=100
POOL_ACQUIRE_TIMEOUT=30000

# Circuit Breaker
ENABLE_CIRCUIT_BREAKER=true
CIRCUIT_FAILURE_THRESHOLD=5
CIRCUIT_RESET_TIMEOUT=60000

# Rate Limiting
ENABLE_RATE_LIMIT=true
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX=100

# Security
JWT_SECRET=change-this-to-a-secure-random-string
JWT_EXPIRES_IN=24h
ENABLE_CORS=true
CORS_ORIGIN=*
CORS_CREDENTIALS=false

# DDoS Protection
ENABLE_DDOS_PROTECTION=true
DDOS_BURST=10
DDOS_LIMIT=15

# Monitoring
ENABLE_PROMETHEUS=true
PROMETHEUS_PORT=9091
PROMETHEUS_PATH=/metrics

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE=logs/otedama.log
LOG_MAX_SIZE=100m
LOG_MAX_FILES=10

# Debug Mode
DEBUG=false