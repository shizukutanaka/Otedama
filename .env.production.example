# Production Environment Configuration Template
# Copy this file to .env.production and fill in your values

# Application
NODE_ENV=production
APP_NAME=Otedama
APP_PORT=8080
APP_HOST=0.0.0.0

# Database
DB_HOST=your-db-host.region.rds.amazonaws.com
DB_PORT=3306
DB_NAME=otedama_production
DB_USER=otedama_user
DB_PASSWORD=your-secure-password
DB_SSL_CA=/path/to/rds-ca-cert.pem

# Redis
REDIS_HOST=your-redis-cluster.cache.amazonaws.com
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password

# Security
JWT_SECRET=your-very-long-random-jwt-secret-key
SESSION_SECRET=your-very-long-random-session-secret
ENCRYPTION_KEY=your-32-character-encryption-key

# Email/SMTP
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASS=your-sendgrid-api-key
ALERT_EMAIL=ops@your-company.com

# Monitoring
ALERT_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
ALERT_WEBHOOK_TOKEN=your-webhook-token

# AWS/Backup
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
BACKUP_BUCKET=otedama-backups-production

# Mining Pool
POOL_WALLET_ADDRESS=your-pool-wallet-address
POOL_FEE_ADDRESS=your-fee-collection-address

# API Keys
COINGECKO_API_KEY=your-coingecko-api-key
ETHERSCAN_API_KEY=your-etherscan-api-key
BSCSCAN_API_KEY=your-bscscan-api-key

# Maintenance
MAINTENANCE_ALLOWED_IPS=10.0.0.1,10.0.0.2

# Performance
MAX_WORKERS=0
CLUSTER_ENABLED=true
CACHE_TTL=3600

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
LOG_MAX_FILES=30
LOG_MAX_SIZE=100m

# Feature Flags
ENABLE_DEX=true
ENABLE_MINING=true
ENABLE_DEFI=true
ENABLE_WEBHOOKS=true
ENABLE_GRAPHQL=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGINS=https://api.otedama.io,https://app.otedama.io

# SSL/TLS
SSL_CERT_PATH=/etc/letsencrypt/live/otedama.io/fullchain.pem
SSL_KEY_PATH=/etc/letsencrypt/live/otedama.io/privkey.pem

# Monitoring Endpoints
METRICS_PORT=9090
HEALTH_CHECK_PATH=/health
READINESS_CHECK_PATH=/ready