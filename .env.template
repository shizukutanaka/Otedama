# Otedama Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit the actual .env file to version control

# ========================================
# CRITICAL SECURITY CREDENTIALS
# ========================================

# Admin Authentication (CRITICAL - Change these!)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your-secure-admin-password-here

# JWT Authentication Secret (CRITICAL - Use a long, random string)
JWT_SECRET=your-very-long-random-jwt-secret-minimum-32-characters

# CSRF Protection Secret (CRITICAL)
CSRF_SECRET=your-csrf-secret-minimum-32-characters

# Grafana Admin Password (CRITICAL)
GRAFANA_ADMIN_PASSWORD=your-secure-grafana-password

# ========================================
# FINANCIAL/MINING CONFIGURATION
# ========================================

# Pool Operator Bitcoin Address (HIGH PRIORITY)
POOL_OPERATOR_ADDRESS=your-bitcoin-address-here

# ========================================
# EMAIL/NOTIFICATION SERVICES
# ========================================

# SMTP Configuration
SMTP_HOST=smtp.yourdomain.com
SMTP_PORT=587
SMTP_USER=notifications@yourdomain.com
SMTP_PASSWORD=your-smtp-password

# Slack Notifications (Optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/your-webhook-url

# Alert Webhook (Optional)
ALERT_WEBHOOK_URL=https://your-alert-webhook-url

# ========================================
# CLOUD STORAGE/BACKUP
# ========================================

# AWS S3 Configuration (if using cloud backups)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
S3_BUCKET_NAME=your-backup-bucket

# Backup Encryption Key
BACKUP_ENCRYPTION_KEY=your-backup-encryption-key-32-characters

# ========================================
# SERVICE DISCOVERY
# ========================================

# Node Discovery Bootstrap URLs (comma-separated)
NODE_DISCOVERY_BOOTSTRAP_URLS=seed1.yourdomain.com:8333,seed2.yourdomain.com:8333,seed3.yourdomain.com:8333

# ========================================
# DATABASE CONFIGURATION
# ========================================

# Database URL (if using external database)
DATABASE_URL=sqlite:./otedama.db

# Database Encryption Key (if using encrypted database)
DATABASE_ENCRYPTION_KEY=your-database-encryption-key

# ========================================
# API/SERVICE CONFIGURATION
# ========================================

# API Server Configuration
API_PORT=3333
WS_PORT=3334

# External API Keys (if using third-party services)
COINBASE_API_KEY=your-coinbase-api-key
COINBASE_API_SECRET=your-coinbase-api-secret

# Mining Pool API Keys (if connecting to external pools)
EXTERNAL_POOL_API_KEY=your-external-pool-api-key

# ========================================
# ENVIRONMENT CONFIGURATION
# ========================================

# Application Environment
NODE_ENV=production

# Logging Level
LOG_LEVEL=info

# Debug Mode (set to false in production)
DEBUG=false

# ========================================
# SECURITY HEADERS AND POLICIES
# ========================================

# Content Security Policy Nonce (generate randomly)
CSP_NONCE=your-random-csp-nonce

# Rate Limiting Redis URL (if using Redis for rate limiting)
REDIS_URL=redis://localhost:6379

# ========================================
# MONITORING AND ANALYTICS
# ========================================

# Prometheus Metrics (Optional)
METRICS_ENABLED=true

# Analytics API Keys (Optional)
GOOGLE_ANALYTICS_ID=your-ga-tracking-id

# ========================================
# SSL/TLS CONFIGURATION
# ========================================

# SSL Certificate Paths (for production)
SSL_CERT_PATH=/path/to/ssl/cert.pem
SSL_KEY_PATH=/path/to/ssl/private.key

# Let's Encrypt Configuration (if using automatic SSL)
LETSENCRYPT_EMAIL=admin@yourdomain.com
LETSENCRYPT_DOMAIN=yourdomain.com

# ========================================
# INSTRUCTIONS
# ========================================

# 1. Copy this file to .env: cp .env.template .env
# 2. Fill in all required values above
# 3. Run: npm run validate-env to check configuration
# 4. NEVER commit .env to version control
# 5. Use different values for development/staging/production