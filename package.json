{
  "name": "otedama",
  "version": "1.0.8",
  "description": "High-Performance P2P Mining Pool Platform",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "start:pool": "node start-mining-pool.js",
    "start:pool:cluster": "node start-mining-pool.js --mode cluster",
    "start:pool:federated": "node start-mining-pool.js --mode federated",
    "start:miner": "node otedama-miner.js",
    "start:all": "concurrently \"npm run start:pool\" \"npm run start:miner\"",
    "start:profit-switching": "node start-mining-pool.js --enable-profit-switching",
    "health": "node scripts/health-check.js",
    "backup:now": "node scripts/backup-now.js",
    "security:scan": "node scripts/security-scan.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:integration": "node scripts/test-integration.js",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "config:validate": "node scripts/validate-config.js",
    "db:setup": "node scripts/setup-database.js",
    "db:migrate": "node scripts/migrate-database.js",
    "docker:build": "docker build -t otedama .",
    "docker:run": "docker-compose up -d"
  },
  "keywords": [
    "mining",
    "cryptocurrency",
    "blockchain",
    "p2p",
    "stratum-v2",
    "mining-pool"
  ],
  "author": "Otedama Team",
  "license": "MIT",
  "dependencies": {
    "better-sqlite3": "^9.2.2",
    "express": "^4.18.2",
    "ws": "^8.14.2",
    "socket.io": "^4.5.4",
    "dotenv": "^16.3.1",
    "winston": "^3.11.0",
    "commander": "^11.1.0",
    "prom-client": "^15.0.0",
    "bitcoinjs-lib": "^6.1.5",
    "ethers": "^6.9.0",
    "axios": "^1.6.2",
    "jsonwebtoken": "^9.0.2",
    "inquirer": "^9.2.12",
    "chalk": "^5.3.0",
    "ora": "^6.3.1",
    "blessed": "^0.1.81",
    "blessed-contrib": "^4.11.0",
    "cli-table3": "^0.6.3"
  },
  "devDependencies": {
    "@types/node": "^20.10.4",
    "eslint": "^8.55.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-security": "^1.7.1",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "jsdoc": "^4.0.2",
    "@babel/core": "^7.23.5",
    "@babel/preset-env": "^7.23.5",
    "babel-jest": "^29.7.0",
    "concurrently": "^8.2.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}