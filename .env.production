# Production Environment Variables
# CRITICAL: Change ALL values before production deployment

# Node Environment
NODE_ENV=production
PORT=3333

# Security Keys - MUST BE CHANGED!
JWT_SECRET=CHANGE_THIS_TO_RANDOM_64_CHAR_STRING_IN_PRODUCTION
SESSION_SECRET=CHANGE_THIS_TO_RANDOM_64_CHAR_STRING_IN_PRODUCTION
CSRF_SECRET=CHANGE_THIS_TO_RANDOM_64_CHAR_STRING_IN_PRODUCTION
ENCRYPTION_KEY=CHANGE_THIS_TO_RANDOM_32_CHAR_STRING_IN_PRODUCTION

# Database Configuration
DB_PATH=./data/otedama.db
DB_BACKUP_PATH=./backups

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_THIS_TO_STRONG_REDIS_PASSWORD
REDIS_DB=0

# CORS Configuration
CORS_ORIGINS=https://yourdomain.com,https://app.yourdomain.com

# API Configuration
API_RATE_LIMIT=100
API_RATE_WINDOW=60000

# Mining Configuration
MINING_POOL_NAME=Otedama Mining Pool
MINING_POOL_URL=https://pool.yourdomain.com
MINING_FEE=1.0

# AWS S3 Configuration (Optional)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=
S3_BUCKET_NAME=

# Email Configuration (Optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=

# Monitoring
SENTRY_DSN=
NEWRELIC_LICENSE_KEY=

# Security Settings
MAX_LOGIN_ATTEMPTS=5
LOGIN_COOLDOWN_MINUTES=15
SESSION_TIMEOUT_HOURS=8
ENABLE_2FA=true

# ZKP Settings
ZKP_KEY_SIZE=2048
ZKP_ROUNDS=3

# SSL/TLS
SSL_CERT_PATH=/etc/ssl/certs/yourdomain.crt
SSL_KEY_PATH=/etc/ssl/private/yourdomain.key

# Logging
LOG_LEVEL=warn
LOG_RETENTION_DAYS=30

# Feature Flags
ENABLE_DeFi=true
ENABLE_CROSS_CHAIN=true
ENABLE_AI_OPTIMIZATION=true
ENABLE_AGENT_SYSTEM=true