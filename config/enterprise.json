{
  "pool": {
    "port": 3333,
    "difficulty": 16,
    "payoutInterval": 3600000,
    "minPayout": 0.001,
    "fee": 0.01,
    "maxConnections": 50000
  },
  "cluster": {
    "workers": 16,
    "rebalanceInterval": 300000,
    "healthCheckInterval": 10000
  },
  "database": {
    "shardCount": 32,
    "maxShardSize": 2147483648,
    "replicationFactor": 3,
    "backupInterval": 86400000
  },
  "cache": {
    "maxMemory": 4294967296,
    "ttl": 7200,
    "evictionPolicy": "lru"
  },
  "ha": {
    "heartbeatInterval": 1000,
    "electionTimeout": 5000,
    "dataPort": 5556,
    "multicastAddress": "239.255.0.1",
    "multicastPort": 5555
  },
  "monitoring": {
    "metricsInterval": 10000,
    "retentionDays": 90,
    "alertThresholds": {
      "cpuUsage": 80,
      "memoryUsage": 85,
      "diskUsage": 90,
      "errorRate": 5,
      "responseTime": 1000
    }
  },
  "p2p": {
    "port": 6633,
    "maxPeers": 200,
    "seedNodes": [
      "seed1.otedama.network:6633",
      "seed2.otedama.network:6633",
      "seed3.otedama.network:6633"
    ]
  },
  "mining": {
    "algorithms": ["sha256", "scrypt", "ethash", "randomx", "kawpow"],
    "autoSwitch": true,
    "profitCheckInterval": 300000
  },
  "api": {
    "port": 8080,
    "rateLimit": {
      "windowMs": 60000,
      "max": 1000
    },
    "cors": {
      "origin": "*",
      "methods": ["GET", "POST", "OPTIONS"]
    }
  },
  "security": {
    "tls": {
      "enabled": true,
      "cert": "/path/to/cert.pem",
      "key": "/path/to/key.pem"
    },
    "ddos": {
      "enabled": true,
      "maxSharesPerSecond": 100,
      "banDuration": 3600000
    },
    "authentication": {
      "enabled": false,
      "type": "jwt"
    }
  }
}